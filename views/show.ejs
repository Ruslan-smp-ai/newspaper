<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <!-- <link rel="stylesheet" href="/stylesheets/style.css" /> -->
  <link rel="stylesheet" href="/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <link rel="shortcut icon" href="/images/title-icon.png" type="image/x-icon">
  <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>

<body>
  <script language="javascript" src="/js/bootstrap.min.js"></script>
  <div class="container">
    <%- include("elements/navbar.ejs") %>
      <div class="d-flex justify-content-center">
        <h1 class="upper_title" href="#">Newspaper</h1>
      </div>
      <hr />
      <ul class="nav justify-content-center">
        <li class="nav-item">
          <a class="nav-link active" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/news">News</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/politics">Politics</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/sport">Sport</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/culture">Culture</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/covid">Covid-19</a>
        </li>
      </ul>
      <hr />

      <div class="pt-4">
        <div class="blog-post">
          <img style="height: 400px; width: 100%; object-fit: cover; border-radius: 10px;"
            src="/usersImages/<%- post['image'] %>" class="img-fluid" alt="Responsive image">
          <div class="pt-3"></div>
          <h2 class="blog-post-title">
            <%- post["title"] %>
          </h2>
          <h5 class="blog-post-meta">
            <%- post["description"] %>
          </h5>
          <p class="blog-post-meta">
            <%- date %>
          </p>
          <p class="blog-post-meta"><%- article %></p>
        </div><!-- /.blog-post -->
        <hr style="width: 100%; margin-left: -0.2em; margin-right: -1.5em">
        <div class="pt-4"></div>
        <h2 class="blog-post-title">
          Comments
        </h2>
        <form method="post">
          <div class="form-group pt-3">
            <input
              type="text"
              name="comment"
              class="form-control form-control-underlined"
              id="comment"
              aria-describedby="comment"
              placeholder="Add your comment"
            />
          </div>
          <div class="pt-3"></div>
          <button type="submit" class="btn btn-dark">Submit</button>
        </form>
      
      <div class="pb-1">
      </div>
  </div>
  <div class="row d-flex justify-content-center mt-100 mb-100">
    <div class="col-lg-12">
            <div class="card-body text-left">
            </div>
            <div class="comment-widgets">
                <!-- Comment Row -->
                <% comments.forEach(function(comment) { %>
                <div class="d-flex flex-row comment-row m-t-0">
                    <div class="p-2"><img src="/avatarsImages/<%- comment['image'] %>" alt="user" width="50" class="rounded-circle"></div>
                    <div class="comment-text w-100">
                        <h6 class="font-medium"><%- comment["name"] %></h6> <span class="m-b-15 d-block"><%- comment["comment"] %></span>
                    </div>
                </div> <!-- Comment Row -->
                <% }) %>
            </div> <!-- Card -->
            <div class="pb-4">
            </div>
            <div class="pb-4">
            </div>
    </div>
</div>
</div>
<%- include("elements/form-footer.ejs") %>
</body>

</html>